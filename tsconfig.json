{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "armview-vscode/src/lib/arm-parser.ts",
    "armview-vscode/src/lib/arm-parser-types.ts",
    "armview-vscode/src/lib/arm-exp-parser.ts"
  ],
  "exclude": [
    "src/public/js/**"
  ]
}